<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">
        <ImageView
            android:id="@+id/imItemHouseRequest"
            android:src="@mipmap/ic_launcher"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/more_request"
            android:layout_gravity="right"
            android:padding="10dp"
            android:src="@drawable/icon_more_yellow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_gravity="bottom"
            android:orientation="vertical"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <com.example.quang.studenthousing.object.CustomTextBold
                android:layout_width="wrap_content"
                android:textColor="#000000"
                android:text="Hahahahah"
                android:lines="1"
                android:id="@+id/tvItemTitleRequest"
                android:padding="5dp"
                android:layout_marginLeft="5dp"
                style="?android:attr/textAppearanceSmall"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <com.example.quang.studenthousing.object.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/price"
                        android:drawablePadding="5dp"
                        android:lines="1"
                        android:drawableLeft="@drawable/icon_price"
                        android:id="@+id/tvItemPriceRequest"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <com.example.quang.studenthousing.object.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/acreage"
                        android:drawablePadding="5dp"
                        android:lines="1"
                        android:drawableLeft="@drawable/icon_acreage"
                        android:id="@+id/tvItemAcreageRequest"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</android.support.v7.widget.CardView>