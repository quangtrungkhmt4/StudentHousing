<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_weight="5"
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <com.example.quang.studenthousing.object.CustomTextView
                android:layout_width="wrap_content"
                android:id="@+id/tvUserNameRegisterPost"
                android:text="@string/name"
                android:padding="10dp"
                android:lines="1"
                android:layout_marginLeft="10dp"
                style="?android:attr/textAppearanceMedium"
                android:layout_height="wrap_content" />

            <com.example.quang.studenthousing.object.CustomTextView
                android:layout_width="wrap_content"
                android:id="@+id/tvUserEmailRegisterPost"
                android:text="@string/no_email"
                android:padding="10dp"
                android:lines="1"
                android:layout_marginLeft="10dp"
                style="?android:attr/textAppearanceSmall"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imMoreUserRegister"
            android:layout_weight="1"
            android:padding="10dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/icon_more_yellow"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>


</android.support.v7.widget.CardView>