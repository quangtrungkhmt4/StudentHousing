<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.example.quang.studenthousing.object.CustomTextBold
            android:layout_width="wrap_content"
            android:id="@+id/tvTitleHouseBooking"
            android:text="@string/title"
            android:drawableLeft="@drawable/icon_house_blue"
            android:drawablePadding="10dp"
            android:padding="10dp"
            style="?android:attr/textAppearanceMedium"
            android:layout_height="wrap_content" />

        <com.example.quang.studenthousing.object.CustomTextView
            android:layout_width="wrap_content"
            android:id="@+id/tvNamePersonHouseBooking"
            android:text="@string/name"
            android:padding="10dp"
            android:drawableLeft="@drawable/icon_person_blue"
            android:drawablePadding="10dp"
            android:lines="1"
            style="?android:attr/textAppearanceSmall"
            android:layout_height="wrap_content" />
        <com.example.quang.studenthousing.object.CustomTextView
            android:id="@+id/tvPhonePersonHouseBooking"
            android:layout_width="wrap_content"
            android:text="@string/name"
            android:padding="10dp"
            android:drawableLeft="@drawable/icon_phone_blue"
            android:drawablePadding="10dp"
            android:lines="1"
            style="?android:attr/textAppearanceSmall"
            android:layout_height="wrap_content" />
    </LinearLayout>
</android.support.v7.widget.CardView>